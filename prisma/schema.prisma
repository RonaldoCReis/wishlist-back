generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  email     String   @unique
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  List List[]

  @@map("users")
}

model List {
  id        String    @id @default(cuid())
  name      String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  userId    String
  User      User      @relation(fields: [userId], references: [id])
  Product   Product[]

  @@map("lists")
}

model Product {
  id        String   @id @default(cuid())
  url       String
  name      String
  price     Float
  imageUrl  String   @map("image_url")
  store     String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  listId    String
  List      List     @relation(fields: [listId], references: [id])

  @@map("products")
}
